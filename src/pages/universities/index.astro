---
import Layout from "@/layouts/Layout.astro";

const title = "加盟大学";
const description = "全日本釣魚連盟に加盟している大学の一覧を紹介します。";
const og_image = "public/images/university1.png";
import {Image} from "astro:assets";
import Layout from "@/layouts/Layout.astro";
import University from "@/components/University.astro";
//import { getUniversities } from "@/lib/microcms";
//const response = await getUniversities({ fields: ["id", "name", "content", "image", "link_instagram", "link_x", "link_homepage", "link_welcome", "createdAt"] });

const universities = Array.from({ length: 10 }, (_, i) => ({
  name: `大学名 ${i + 1}`,
  description: `大学 ${i + 1} の釣りサークル活動内容がここに入ります。`,
  image: "public/images/university1.png", 
  links: {
    instagram: `https://instagram.com/university${i + 1}`,
    twitter: `https://twitter.com/university${i + 1}`,
    homepage: `https://university${i + 1}.com`,
    welcome: `https://university${i + 1}.com/welcome`,
    details: `http://localhost:4321/university-detail${i + 1}`,
  },
}));
---

<Layout title={title} description={description} og_image={og_image}>
  <main class="universities-main">
    <!--배경 -->
    <section class="universities-header">
      <h1>加盟大学</h1>
    </section>

    <!-- 대학 리스트 -->
    <section class="university-list">
      {universities.map((university) => (
        <!-- <University name={content.name} content={content.content} image={content.image} link_instagram={content.link_instagram} link_x={content.link_x} link_welcome={content.link_welcome} /> -->
        
        <div class="university-item">
          <!-- 이미지 및 SNS 아이콘 -->
          <div class="image-wrapper">
            <img src={university.image} alt={university.name} class="university-image" />
            <div class="social-icons">
              <a href={university.links.instagram} target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-instagram"></i>
              </a>
              <a href={university.links.twitter} target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-twitter"></i>
              </a>
            </div>
          </div>

          <!-- 대학 정보 -->
          <h2 class="university-name">{university.name}</h2>
          <hr class="divider" />
          <p class="university-description">{university.description}</p>

          <!-- 링크 -->
          <div class="university-links">
            <a href={university.links.homepage} target="_blank" rel="noopener noreferrer" class="hp-link">ホームページはこちら</a>
            <div class="link-row">
             <a href={university.links.welcome} target="_blank" rel="noopener noreferrer" class="welcome-link">新歓情報はこちら</a>
             <a href={university.links.details} target="_blank" rel="noopener noreferrer" class="details-link">詳しく見る&gt;&gt;</a>
          </div>
          </div>
        </div>
      ))}
    </section>
  </main>
</Layout>